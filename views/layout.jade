doctype html
html(dir="ltr", lang="en-US", ng-app="tvshowApp")
    head
        meta(http-equiv="content-type", content="text/html; charset=utf-8")
        meta(name="author", content="Carl Ngan")
        base(href="/")

        link(rel="stylesheet", href="/bower/bootswatch-dist/css/bootstrap.min.css", type="text/css")
        link(rel="stylesheet", href="/bower/fontawesome/css/font-awesome.min.css")

        meta(name="viewport", content="width=device-width, initial-scale=1")
        title TV Show App
        
    body.stretched(ng-controller="MainCtrl")
        #wrapper.clearfix
            section#content
                ui-view
            include includes/footer

        script(type="text/javascript", src="/bower/jquery/dist/jquery.min.js")
        script(type="text/javascript",src="/bower/angular/angular.min.js")
        script(type="text/javascript",src="/bower/ocLazyLoad/dist/ocLazyLoad.min.js")
        script(type="text/javascript",src="/bower/angular-ui-router/release/angular-ui-router.min.js")
        script(type="text/javascript",src="/bower/angular-local-storage/dist/angular-local-storage.min.js")
        script(type="text/javascript",src="/bower/angular-animate/angular-animate.min.js")
        script(type="text/javascript", src="/js/angular-app.js")
